<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/lib/bootstrap-5.3.6-dist/css/bootstrap.min.css">
    <title>Pokepedia <%= korName %> (<%= name %> )</title>
</head>
<body class="container py-4">
    <div class="row mb-4">
        <div class="col-md-4 text-center">
            <h1><%= korName %> 상세 정보</h1>
            <p class="text-muted"><%= species %></p>
            <div class="container">
                <% types.forEach(type => { %>
                    <span class="badge bg-primary me-1"><%= type %></span>
                <% }) %>
            </div>
        </div>
    </div>
    <div class="col-md-8 text-center">
        <img src="<%= imageUrl %>" alt="<%= name %>" class="img-fluid mb-3" style="max-width: 400px;">
    </div>
    <div class="row mb-4">
        <div class="col-md-6 text-center">
            <table class="table table-bordered w-auto">
                <tbody>
                <% for (const stat in baseStats) { %>
                    <tr>
                        <th><%= stat %></th>
                        <td><%= baseStats[stat] %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <% evolutions.forEach((stage, i) =>{ %>
                <div class="text-center">
                    <img src="<%= stage.image %>" alt="<%= stage.name %>" style="width: 100px;">
                    <div><strong><%= stage.name %></strong></div>
                </div>
                <% if (stage.evolveMethod && i < evolutions.length - 1) { %>
                    <div><em><%= stage.evolveMethod %></em></div>
                <% } %>
            <% }) %>
        </div>
    </div>
</body>
</html>